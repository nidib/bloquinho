{
	"compilerOptions": {
		"incremental": true,
		"jsx": "preserve",
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"allowJs": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true
	},
	"exclude": ["node_modules"]
}
